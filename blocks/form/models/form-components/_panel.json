{
    "definitions": [
        {
            "title": "Panel",
            "id": "panel",
            "plugins": {
                "xwalk": {
                    "page": {
                        "resourceType": "core/fd/components/form/panelcontainer/v1/panelcontainer",
                        "template": {
                            "jcr:title": "Panel",
                            "fieldType": "panel",
                            "minOccur": 1
                        }
                    }
                }
            }
        }
    ],
    "models": [
        {
            "id": "panel",
            "fields": [
                {
                    "component": "tab",
                    "label": "Basic",
                    "name": "basic"
                },
                {
                    "...": "../form-common/_basic-input-fields.json#/fields"
                },
                {
                    "component": "tab",
                    "label": "Repeat Panel",
                    "name": "repeat"
                },
                {
                    "component": "boolean",
                    "name": "repeatable",
                    "label": "Make panel repeatable",
                    "valueType": "boolean"
                },
                {
                    "component": "number",
                    "name": "minOccur",
                    "label": "Minimum repetitions",
                    "valueType": "number",
                    "description": "Minimum number of times the panel appears on the form",
                    "condition": {
                        "===": [
                            {
                                "var": "repeatable"
                            },
                            true
                        ]
                    }
                },
                {
                    "component": "number",
                    "name": "maxOccur",
                    "label": "Maximum repetitions",
                    "valueType": "number",
                    "placeholder": "No Limit",
                    "description": "Maximum number of times the panel can appear on the form. No value indicates no limit.",
                    "condition": {
                        "and": [
                            {
                                "===": [
                                    {
                                        "var": "repeatable"
                                    },
                                    true
                                ]
                            },
                            {
                                "!==": [
                                    {
                                        "var": "variant"
                                    },
                                    "noButtons"
                                ]
                            }
                        ]
                    }
                },
                {
                    "component": "select",
                    "name": "variant",
                    "label": "Variant",
                    "options": [
                        {
                            "name": "No Actions",
                            "value": "noButtons"
                        },
                        {
                            "name": "Add & Delete Buttons",
                            "value": "addDeleteButtons"
                        }
                    ],
                    "value": "addDeleteButtons",
                    "condition": { "===": [{"var": "repeatable"}, true] }
                },
                {
                    "component": "text",
                    "name": "repeatAddButtonLabel",
                    "label": "Add Button Label",
                    "valueType": "string",
                    "value": "Add",
                    "condition": {
                        "and": [
                            {
                                "===": [
                                    {
                                        "var": "variant"
                                    },
                                    "addDeleteButtons"
                                ]
                            },
                            {
                                "===": [
                                    {
                                        "var": "repeatable"
                                    },
                                    true
                                ]
                            }
                        ]
                    }
                },
                {
                    "component": "text",
                    "name": "repeatDeleteButtonLabel",
                    "label": "Delete Button Label",
                    "valueType": "string",
                    "value": "Delete",
                    "condition": {
                        "and": [
                            {
                                "===": [
                                    {
                                        "var": "variant"
                                    },
                                    "addDeleteButtons"
                                ]
                            },
                            {
                                "===": [
                                    {
                                        "var": "repeatable"
                                    },
                                    true
                                ]
                            }
                        ]
                    }
                },
                {
                    "...": "../form-common/_help-container.json#/fields"
                }
            ]
        }
    ]
}
